class:text-pane {
	!class:parent { pane }
	mode:default {
		int:height { 190 }
	}
}
class:text-pane-display {
	!class:parent { pane-display }
	mode:default {
		int:height { 114 }
	}
}
class:text-pane-input {
	!class:parent { text-input }
}
class:text-pane-error {
	!class:parent { header-2 }
	mode:default {
		color[]:background-color { #AD4531 #AD4531 #AD4531 #AD4531 }
	}
}